@* UI partag√©e : inclusion de l'assembly Aion.UI pour exposer les routes communes (Agenda, etc.) *@
<Router AppAssembly="@typeof(App).Assembly"
        AdditionalAssemblies="@AdditionalRouterAssemblies">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Shared.MainLayout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(Shared.MainLayout)">
            <p class="text-center">Page introuvable.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private static readonly System.Reflection.Assembly[] AdditionalRouterAssemblies =
    {
        typeof(Agenda).Assembly
    };
}
