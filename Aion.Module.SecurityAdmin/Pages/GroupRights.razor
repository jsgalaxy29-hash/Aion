@page "/admin/rights"
@using Microsoft.AspNetCore.Components.Web
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@using Microsoft.EntityFrameworkCore
@using System.Linq
@using Aion.Security
@using Aion.Security.Services
@inject IDbContextFactory<Aion.Security.SecurityDbContext> SecurityDbFactory
@inject IDbContextFactory<Aion.Infrastructure.AionDbContext> AppDbFactory
@inject IUserContext UserContext
@inject IRightService RightService

<PageTitle>Gestion des droits</PageTitle>

<FluentLabel Typo="Typography.H1">Gestion des droits</FluentLabel>
@if (!string.IsNullOrWhiteSpace(_errorMessage))
{
    <div class="alert alert-danger" role="alert">@_errorMessage</div>
}
@if (!string.IsNullOrWhiteSpace(_statusMessage))
{
    <div class="alert alert-success" role="status">@_statusMessage</div>
}

@if (_isLoading)
{
    <div class="d-flex align-items-center gap-2">
        <FluentProgressRing />
        <span>Chargement des données de sécurité...</span>
    </div>
}
else
{
    <EditForm Model="_groupModel" OnValidSubmit="SaveGroupAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="d-flex flex-wrap align-items-end gap-3 mb-4">
            <div>
                <FluentLabel Typo="Typography.H6" for="group-select">Sélection d'un groupe</FluentLabel>
                <InputSelect id="group-select"
                             class="form-select"
                             @bind-Value="_selectedGroupId"
                             @bind-Value:after="OnGroupSelectionChanged"
                             TValue="int?">
                    <option value="">-- Sélectionner --</option>
                    @foreach (var group in _groups)
                    {
                        <option value="@group.Id">@group.Name</option>
                    }
                </InputSelect>
            </div>

            <FluentButton Appearance="Appearance.Accent" Icon="Add16Filled" OnClick="CreateNewGroup">
                Nouveau groupe
            </FluentButton>

            @if (_groupModel?.Id > 0)
            {
                <FluentButton Appearance="Appearance.Stealth" OnClick="ReloadCurrentGroupAsync">
                    Réinitialiser
                </FluentButton>
            }
        </div>

        <fieldset class="mb-4">
            
            <FluentLabel Typo="Typography.H4" >Informations du groupe</FluentLabel>
            <div class="form-grid">
                <FluentLabel>Nom *</FluentLabel>
                <InputText @bind-Value="_groupModel!.Name" class="form-control" />
                <ValidationMessage For="() => _groupModel!.Name" />

                <FluentLabel>Description</FluentLabel>
                <InputTextArea @bind-Value="_groupModel!.Description" class="form-control" />

                <FluentLabel>Actif</FluentLabel>
                <InputCheckbox @bind-Value="_groupModel!.Actif" class="form-check-input" />

                <FluentLabel>Groupe système</FluentLabel>
                <InputCheckbox @bind-Value="_groupModel!.IsSystem" class="form-check-input" />
            </div>
        </fieldset>

        <div class="d-flex flex-wrap gap-2 mb-4">
            <FluentButton Appearance="Appearance.Accent" Type="ButtonType.Submit">
                Enregistrer le groupe
            </FluentButton>

            @if (_groupModel?.Id > 0)
            {
                <FluentButton Appearance="Appearance.Outline" OnClick="DeleteGroupAsync" Disabled="_groupModel!.IsSystem">
                    Supprimer
                </FluentButton>
            }
        </div>
    </EditForm>

    <section>
        <FluentLabel Typo="Typography.H5" >Membres et droits</FluentLabel>
         @if (_groupModel is null || _groupModel.Id == 0)
        {
            <div class="alert alert-info">
                Enregistrez le groupe avant de gérer les utilisateurs et les droits associés.
            </div>
        }
        else
        {
            <FluentTabs>
                <FluentTab>
                    <Header>Utilisateurs</Header>
                    <ChildContent>
                        @if (_groupMembers.Count == 0)
                        {
                            <div class="alert alert-secondary">Aucun utilisateur dans ce groupe pour le moment.</div>
                        }
                        else
                        {
                            <div class="table-responsive mb-3">
                                <table class="table table-striped align-middle">
                                    <thead>
                                        <tr>
                                            <th>Identifiant</th>
                                            <th>Nom complet</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var member in _groupMembers)
                                        {
                                            <tr>
                                                <td>@member.UserName</td>
                                                <td>@member.FullName</td>
                                                <td class="text-end">
                                                    <FluentButton Appearance="Appearance.Outline" OnClick="() => RemoveUserAsync(member.UserId)">
                                                        Retirer
                                                    </FluentButton>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        <div class="d-flex flex-wrap align-items-end gap-2">
                            <div>
                                <FluentLabel class="form-label" for="user-select">Ajouter un utilisateur</FluentLabel>
                                <InputSelect id="user-select"
                                             class="form-select"
                                             @bind-Value="_selectedUserToAdd"
                                             TValue="int?">
                                    <option value="">-- Sélectionner --</option>
                                    @foreach (var user in _availableUsers)
                                    {
                                        <option value="@user.Id">@user.Label</option>
                                    }
                                </InputSelect>
                            </div>
                            <FluentButton Appearance="Appearance.Accent" Icon="Add16Filled" OnClick="AddUserAsync" Disabled="_selectedUserToAdd is null">
                                Ajouter
                            </FluentButton>
                        </div>
                    </ChildContent>
                </FluentTab>

                @foreach (var type in _rightTypes)
                {
                    var state = _rightStates[type.Code];
                    <FluentTab>
                        <Header>@type.Name</Header>
                        <ChildContent>
                            @if (!state.AllSubjects.Any())
                            {
                                <div class="alert alert-warning">
                                    Aucune ressource disponible pour le type "@type.Name" (source : @type.DataSource).
                                </div>
                            }
                            else
                            {
                                <div class="d-flex flex-wrap align-items-end gap-2 mb-3">
                                    <div>
                                        <FluentLabel class="form-label" for="@($"add-{type.Code}")">Ajouter une ressource</FluentLabel>
                                        <InputSelect id="@($"add-{type.Code}")"
                                                     class="form-select"
                                                     @bind-Value="state.SelectedSubjectId"
                                                     TValue="int?">
                                            <option value="">-- Sélectionner --</option>
                                            @foreach (var subject in state.AvailableSubjects)
                                            {
                                                <option value="@subject.Id">@subject.Label</option>
                                            }
                                        </InputSelect>
                                    </div>
                                    <FluentButton Appearance="Appearance.Accent" Icon="Add16Filled" Disabled="state.SelectedSubjectId is null" OnClick="() => AddRightAsync(type.Code)">
                                        Ajouter
                                    </FluentButton>
                                </div>

                                @if (state.Entries.Count == 0)
                                {
                                    <div class="alert alert-secondary">Aucun droit n'est défini pour ce type.</div>
                                }
                                else
                                {
                                    <div class="table-responsive">
                                        <table class="table table-striped align-middle">
                                            <thead>
                                                <tr>
                                                    <th>Ressource</th>
                                                    @if (!string.IsNullOrWhiteSpace(type.Right1Name))
                                                    {
                                                        <th>@type.Right1Name</th>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(type.Right2Name))
                                                    {
                                                        <th>@type.Right2Name</th>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(type.Right3Name))
                                                    {
                                                        <th>@type.Right3Name</th>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(type.Right4Name))
                                                    {
                                                        <th>@type.Right4Name</th>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(type.Right5Name))
                                                    {
                                                        <th>@type.Right5Name</th>
                                                    }
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var entry in state.Entries)
                                                {
                                                    <tr>
                                                        <td>@entry.Label</td>
                                                        @if (!string.IsNullOrWhiteSpace(type.Right1Name))
                                                        {
                                                            <td>
                                                                <InputCheckbox class="form-check-input"
                                                                               Value="@entry.Right1"
                                                                               ValueChanged="async value => await ToggleRightAsync(state, entry, 1, value)"
                                                                               ValueExpression="() => entry.Right1" />
                                                            </td>
                                                        }
                                                        @if (!string.IsNullOrWhiteSpace(type.Right2Name))
                                                        {
                                                            <td>
                                                                <InputCheckbox class="form-check-input"
                                                                               Value="@entry.Right2"
                                                                               ValueChanged="async value => await ToggleRightAsync(state, entry, 2, value)"
                                                                               ValueExpression="() => entry.Right2" />
                                                            </td>
                                                        }
                                                        @if (!string.IsNullOrWhiteSpace(type.Right3Name))
                                                        {
                                                            <td>
                                                                <InputCheckbox class="form-check-input"
                                                                               Value="@entry.Right3"
                                                                               ValueChanged="async value => await ToggleRightAsync(state, entry, 3, value)"
                                                                               ValueExpression="() => entry.Right3" />
                                                            </td>
                                                        }
                                                        @if (!string.IsNullOrWhiteSpace(type.Right4Name))
                                                        {
                                                            <td>
                                                                <InputCheckbox class="form-check-input"
                                                                               Value="@entry.Right4"
                                                                               ValueChanged="async value => await ToggleRightAsync(state, entry, 4, value)"
                                                                               ValueExpression="() => entry.Right4" />
                                                            </td>
                                                        }
                                                        @if (!string.IsNullOrWhiteSpace(type.Right5Name))
                                                        {
                                                            <td>
                                                                <InputCheckbox class="form-check-input"
                                                                               Value="@entry.Right5"
                                                                               ValueChanged="async value => await ToggleRightAsync(state, entry, 5, value)"
                                                                               ValueExpression="() => entry.Right5" />
                                                            </td>
                                                        }
                                                        <td class="text-end">
                                                            <FluentButton Appearance="Appearance.Outline" OnClick="() => RemoveRightAsync(state, entry)">
                                                                Retirer
                                                            </FluentButton>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            }
                        </ChildContent>
                    </FluentTab>
                }
            </FluentTabs>
        }
    </section>
}

@code {
    private bool _isLoading = true;
    private string? _errorMessage;
    private string? _statusMessage;
    private int? _selectedGroupId;

    private List<GroupSummary> _groups = new();
    private GroupEditModel? _groupModel;

    private readonly List<GroupMemberVm> _groupMembers = new();
    private readonly List<SelectOption> _availableUsers = new();
    private int? _selectedUserToAdd;

    private readonly Dictionary<string, RightTabState> _rightStates = new(StringComparer.OrdinalIgnoreCase);
    private List<SRightType> _rightTypes = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await using var securityDb = await SecurityDbFactory.CreateDbContextAsync();

            _rightTypes = await securityDb.SRightType
                .AsNoTracking()
                .Where(t => t.TenantId == UserContext.TenantId)
                .OrderBy(t => t.Order)
                .ThenBy(t => t.Name)
                .ToListAsync();

            foreach (var type in _rightTypes)
            {
                _rightStates[type.Code] = new RightTabState(type);
            }

            await LoadGroupsAsync(securityDb);
            _statusMessage = null;
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erreur lors du chargement : {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private Task OnGroupSelectionChanged()
    {
        _statusMessage = null;
        _errorMessage = null;

        if (_selectedGroupId.HasValue)
        {
            return LoadGroupDetailsAsync(_selectedGroupId.Value);
        }

        _groupModel = new GroupEditModel();
        _groupMembers.Clear();
        _availableUsers.Clear();
        foreach (var state in _rightStates.Values)
        {
            state.Clear();
        }
        StateHasChanged();
        return Task.CompletedTask;
    }

    private void CreateNewGroup()
    {
        _selectedGroupId = null;
        _groupModel = new GroupEditModel
        {
            Actif = true
        };
        _groupMembers.Clear();
        _availableUsers.Clear();
        foreach (var state in _rightStates.Values)
        {
            state.Clear();
        }
        _statusMessage = null;
        _errorMessage = null;
    }

    private async Task ReloadCurrentGroupAsync()
    {
        if (_groupModel?.Id > 0)
        {
            await LoadGroupDetailsAsync(_groupModel.Id);
        }
    }

    private async Task LoadGroupsAsync(SecurityDbContext? existingSecurityDb = null, int? keepSelection = null)
    {
        var disposeSecurityDb = existingSecurityDb is null;
        var securityDb = existingSecurityDb ?? await SecurityDbFactory.CreateDbContextAsync();

        try
        {
            _groups = await securityDb.SGroup
            .AsNoTracking()
            .Where(g => g.TenantId == UserContext.TenantId)
            .OrderBy(g => g.Name)
            .Select(g => new GroupSummary(g.Id, g.Name))
            .ToListAsync();

        if (_groups.Count == 0)
        {
            _groupModel = new GroupEditModel { Actif = true };
            _selectedGroupId = null;
            foreach (var state in _rightStates.Values)
            {
                state.Clear();
            }
            _groupMembers.Clear();
            _availableUsers.Clear();
            return;
        }

        var targetId = keepSelection
            ?? _selectedGroupId
            ?? _groups.First().Id;

        _selectedGroupId = targetId;
        await LoadGroupDetailsAsync(targetId, securityDb);
        }
        finally
        {
            if (disposeSecurityDb)
            {
                await securityDb.DisposeAsync();
            }
        }
    }

    private async Task LoadGroupDetailsAsync(int groupId, SecurityDbContext? existingSecurityDb = null)
    {
        var disposeSecurityDb = existingSecurityDb is null;
        var securityDb = existingSecurityDb ?? await SecurityDbFactory.CreateDbContextAsync();

        try
        {
            var group = await securityDb.SGroup
                .AsNoTracking()
                .FirstOrDefaultAsync(g => g.Id == groupId && g.TenantId == UserContext.TenantId);

            if (group == null)
            {
                _errorMessage = "Groupe introuvable.";
                return;
            }

            _groupModel = new GroupEditModel
            {
                Id = group.Id,
                Name = group.Name,
                Description = group.Description,
                IsSystem = group.IsSystem,
                Actif = group.Actif
            };

            await LoadGroupMembersAsync(group.Id, securityDb);
            await LoadRightsAsync(group.Id, securityDb);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erreur lors du chargement du groupe : {ex.Message}";
        }
        finally
        {
            if (disposeSecurityDb)
            {
                await securityDb.DisposeAsync();
            }
        }
    }

    private async Task LoadGroupMembersAsync(int groupId, SecurityDbContext securityDb)
    {
        _groupMembers.Clear();
        _availableUsers.Clear();

        var members = await securityDb.SUserGroup
            .AsNoTracking()
            .Where(ug => ug.GroupId == groupId && ug.IsLinkActive && ug.TenantId == UserContext.TenantId)
            .Join(
                securityDb.SUser.AsNoTracking().Where(u => u.TenantId == UserContext.TenantId),
                ug => ug.UserId,
                u => u.Id,
                (ug, u) => new
                {
                    u.Id,
                    u.UserName,
                    u.FullName
                })
            .OrderBy(x => x.UserName)
            .Select(x => new GroupMemberVm(x.Id, x.UserName, string.IsNullOrEmpty(x.FullName) ? x.UserName : x.FullName))
            .ToListAsync();

        _groupMembers.AddRange(members);

        var memberIds = members.Select(m => m.UserId).ToHashSet();

        var availableUsers = await securityDb.SUser
            .AsNoTracking()
            .Where(u => u.TenantId == UserContext.TenantId && !memberIds.Contains(u.Id))
            .OrderBy(u => u.UserName)
            .Select(u => new SelectOption(u.Id, string.IsNullOrWhiteSpace(u.UserName) ? u.UserName : $"{u.UserName} ({u.UserName})"))
            .ToListAsync();

        _availableUsers.AddRange(availableUsers);
        _selectedUserToAdd = null;
    }

    private async Task LoadRightsAsync(int groupId, SecurityDbContext securityDb)
    {
        await using var appDb = await AppDbFactory.CreateDbContextAsync();

        foreach (var type in _rightTypes)
        {
            if (!_rightStates.TryGetValue(type.Code, out var state))
            {
                state = new RightTabState(type);
                _rightStates[type.Code] = state;
            }

            await state.LoadAsync(securityDb, appDb, groupId, UserContext.TenantId);
        }
    }

    private async Task SaveGroupAsync()
    {
        if (_groupModel is null)
        {
            return;
        }

        try
        {
            await using var securityDb = await SecurityDbFactory.CreateDbContextAsync();
            _errorMessage = null;
            _statusMessage = null;

            if (_groupModel.Id == 0)
            {
                var entity = new SGroup
                {
                    Name = _groupModel.Name,
                    Description = _groupModel.Description,
                    IsSystem = _groupModel.IsSystem,
                    Actif = _groupModel.Actif,
                    TenantId = UserContext.TenantId,
                    DtCreation = DateTime.UtcNow,
                    UsrCreationId = UserContext.UserId
                };

                securityDb.SGroup.Add(entity);
                await securityDb.SaveChangesAsync();

                _statusMessage = "Groupe créé.";
                await LoadGroupsAsync(securityDb, entity.Id);
            }
            else
            {
                var entity = await securityDb.SGroup.FirstOrDefaultAsync(g => g.Id == _groupModel.Id && g.TenantId == UserContext.TenantId);
                if (entity == null)
                {
                    _errorMessage = "Groupe introuvable.";
                    return;
                }

                entity.Name = _groupModel.Name;
                entity.Description = _groupModel.Description;
                entity.IsSystem = _groupModel.IsSystem;
                entity.Actif = _groupModel.Actif;
                entity.DtModification = DateTime.UtcNow;
                entity.UsrModificationId = UserContext.UserId;

                await securityDb.SaveChangesAsync();

                _statusMessage = "Groupe mis à jour.";
                await LoadGroupsAsync(securityDb, entity.Id);
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erreur lors de l'enregistrement : {ex.Message}";
        }
    }

    private async Task DeleteGroupAsync()
    {
        if (_groupModel is null || _groupModel.Id == 0)
        {
            return;
        }

        try
        {
            await using var securityDb = await SecurityDbFactory.CreateDbContextAsync();

            var affectedUsers = await GetActiveGroupMemberIdsAsync(securityDb, _groupModel.Id);
            var entity = await securityDb.SGroup.FirstOrDefaultAsync(g => g.Id == _groupModel.Id && g.TenantId == UserContext.TenantId);
            if (entity == null)
            {
                _errorMessage = "Groupe introuvable.";
                return;
            }

            securityDb.SGroup.Remove(entity);
            await securityDb.SaveChangesAsync();

            _statusMessage = "Groupe supprimé.";
            await LoadGroupsAsync(securityDb);
            InvalidateUserCaches(affectedUsers);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erreur lors de la suppression : {ex.Message}";
        }
    }

    private async Task AddUserAsync()
    {
        if (_groupModel is null || _groupModel.Id == 0 || !_selectedUserToAdd.HasValue)
        {
            return;
        }

        try
        {
            await using var securityDb = await SecurityDbFactory.CreateDbContextAsync();

            var exists = await securityDb.SUserGroup.AnyAsync(ug =>
                ug.GroupId == _groupModel.Id &&
                ug.UserId == _selectedUserToAdd.Value &&
                ug.TenantId == UserContext.TenantId);
            if (exists)
            {
                _statusMessage = "L'utilisateur est déjà membre du groupe.";
                return;
            }

            var link = new SUserGroup
            {
                GroupId = _groupModel.Id,
                UserId = _selectedUserToAdd.Value,
                IsLinkActive = true,
                TenantId = UserContext.TenantId,
                DtCreation = DateTime.UtcNow,
                UsrCreationId = UserContext.UserId
            };

            securityDb.SUserGroup.Add(link);
            await securityDb.SaveChangesAsync();

            var affectedUsers = await GetActiveGroupMemberIdsAsync(securityDb, _groupModel.Id);

            _statusMessage = "Utilisateur ajouté au groupe.";
            await LoadGroupMembersAsync(_groupModel.Id, securityDb);
            InvalidateUserCaches(affectedUsers);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erreur lors de l'ajout de l'utilisateur : {ex.Message}";
        }
    }

    private async Task RemoveUserAsync(int userId)
    {
        if (_groupModel is null || _groupModel.Id == 0)
        {
            return;
        }

        try
        {
            await using var securityDb = await SecurityDbFactory.CreateDbContextAsync();

            var link = await securityDb.SUserGroup.FirstOrDefaultAsync(ug =>
                ug.GroupId == _groupModel.Id &&
                ug.UserId == userId &&
                ug.TenantId == UserContext.TenantId);
            if (link == null)
            {
                _statusMessage = "Lien utilisateur introuvable.";
                return;
            }

            securityDb.SUserGroup.Remove(link);
            await securityDb.SaveChangesAsync();

            var affectedUsers = await GetActiveGroupMemberIdsAsync(securityDb, _groupModel.Id);

            _statusMessage = "Utilisateur retiré du groupe.";
            await LoadGroupMembersAsync(_groupModel.Id, securityDb);
            InvalidateUserCaches(affectedUsers);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erreur lors du retrait de l'utilisateur : {ex.Message}";
        }
    }

    private async Task AddRightAsync(string code)
    {
        if (_groupModel is null || _groupModel.Id == 0)
        {
            return;
        }

        if (!_rightStates.TryGetValue(code, out var state) || !state.SelectedSubjectId.HasValue)
        {
            return;
        }

        try
        {
            await using var securityDb = await SecurityDbFactory.CreateDbContextAsync();
            await using var appDb = await AppDbFactory.CreateDbContextAsync();
            var subjectId = state.SelectedSubjectId.Value;

            var exists = await securityDb.SRight.AnyAsync(r =>
                r.GroupId == _groupModel.Id &&
                r.Target == code &&
                r.SubjectId == subjectId &&
                r.TenantId == UserContext.TenantId);
            if (exists)
            {
                _statusMessage = "Ce droit existe déjà.";
                return;
            }

            var entity = new SRight
            {
                GroupId = _groupModel.Id,
                Target = code,
                SubjectId = subjectId,
                Right1 = state.HasRight1 ? false : null,
                Right2 = state.HasRight2 ? false : null,
                Right3 = state.HasRight3 ? false : null,
                Right4 = state.HasRight4 ? false : null,
                Right5 = state.HasRight5 ? false : null,
                TenantId = UserContext.TenantId,
                DtCreation = DateTime.UtcNow,
                UsrCreationId = UserContext.UserId,
                Actif = true
            };

            securityDb.SRight.Add(entity);
            await securityDb.SaveChangesAsync();

            var affectedUsers = await GetActiveGroupMemberIdsAsync(securityDb, _groupModel.Id);

            _statusMessage = "Droit ajouté.";
            await state.LoadAsync(securityDb, appDb, _groupModel.Id, UserContext.TenantId);
            InvalidateUserCaches(affectedUsers);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erreur lors de l'ajout du droit : {ex.Message}";
        }
    }

    private async Task RemoveRightAsync(RightTabState state, RightEntry entry)
    {
        if (_groupModel is null || _groupModel.Id == 0)
        {
            return;
        }

        try
        {
            await using var securityDb = await SecurityDbFactory.CreateDbContextAsync();
            await using var appDb = await AppDbFactory.CreateDbContextAsync();

            var entity = await securityDb.SRight.FirstOrDefaultAsync(r => r.Id == entry.Id && r.TenantId == UserContext.TenantId);
            if (entity == null)
            {
                _statusMessage = "Droit introuvable.";
                return;
            }

            securityDb.SRight.Remove(entity);
            await securityDb.SaveChangesAsync();

            var affectedUsers = await GetActiveGroupMemberIdsAsync(securityDb, _groupModel.Id);

            _statusMessage = "Droit supprimé.";
            await state.LoadAsync(securityDb, appDb, _groupModel.Id, UserContext.TenantId);
            InvalidateUserCaches(affectedUsers);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erreur lors de la suppression du droit : {ex.Message}";
        }
    }

    private async Task ToggleRightAsync(RightTabState state, RightEntry entry, int slot, bool isChecked)
    {
        if (_groupModel is null || _groupModel.Id == 0)
        {
            return;
        }

        try
        {
            await using var securityDb = await SecurityDbFactory.CreateDbContextAsync();

            var entity = await securityDb.SRight.FirstOrDefaultAsync(r => r.Id == entry.Id && r.TenantId == UserContext.TenantId);
            if (entity == null)
            {
                _statusMessage = "Droit introuvable.";
                return;
            }

            switch (slot)
            {
                case 1:
                    entity.Right1 = isChecked;
                    entry.Right1 = isChecked;
                    break;
                case 2:
                    entity.Right2 = isChecked;
                    entry.Right2 = isChecked;
                    break;
                case 3:
                    entity.Right3 = isChecked;
                    entry.Right3 = isChecked;
                    break;
                case 4:
                    entity.Right4 = isChecked;
                    entry.Right4 = isChecked;
                    break;
                case 5:
                    entity.Right5 = isChecked;
                    entry.Right5 = isChecked;
                    break;
            }

            entity.DtModification = DateTime.UtcNow;
            entity.UsrModificationId = UserContext.UserId;

            await securityDb.SaveChangesAsync();

            var affectedUsers = await GetActiveGroupMemberIdsAsync(securityDb, _groupModel.Id);

            _statusMessage = "Droit mis à jour.";
            InvalidateUserCaches(affectedUsers);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Erreur lors de la mise à jour du droit : {ex.Message}";
        }
    }

    private async Task<List<int>> GetActiveGroupMemberIdsAsync(Aion.Security.SecurityDbContext securityDb, int groupId)
    {
        return await securityDb.SUserGroup
            .Where(ug => ug.GroupId == groupId && ug.TenantId == UserContext.TenantId && ug.IsLinkActive && !ug.Deleted)
            .Select(ug => ug.UserId)
            .Distinct()
            .ToListAsync();
    }

    private void InvalidateUserCaches(IEnumerable<int> userIds)
    {
