    private sealed class RightTabState
    {
        public RightTabState(SRightType type)
        {
            Type = type;
        }

        public SRightType Type { get; }
        public List<SelectOption> AllSubjects { get; private set; } = new();
        public List<SelectOption> AvailableSubjects { get; private set; } = new();
        public List<RightEntry> Entries { get; private set; } = new();
        public int? SelectedSubjectId { get; set; }

        public bool HasRight1 => !string.IsNullOrWhiteSpace(Type.Right1Name);
        public bool HasRight2 => !string.IsNullOrWhiteSpace(Type.Right2Name);
        public bool HasRight3 => !string.IsNullOrWhiteSpace(Type.Right3Name);
        public bool HasRight4 => !string.IsNullOrWhiteSpace(Type.Right4Name);
        public bool HasRight5 => !string.IsNullOrWhiteSpace(Type.Right5Name);

        public void Clear()
        {
            AllSubjects = new List<SelectOption>();
            AvailableSubjects = new List<SelectOption>();
            Entries = new List<RightEntry>();
            SelectedSubjectId = null;
        }

        public async Task LoadAsync(Aion.Security.SecurityDbContext securityDb, Aion.Infrastructure.AionDbContext appDb, int groupId, int tenantId)
        {
            var type = Type;
            var subjects = await ResolveSubjectsAsync(appDb, type, tenantId);
            AllSubjects = subjects;

            var map = subjects.ToDictionary(s => s.Id, s => s.Label);

            var rights = await securityDb.SRight
                .AsNoTracking()
                .Where(r => r.GroupId == groupId && r.Target == type.Code && r.TenantId == tenantId)
                .OrderBy(r => r.SubjectId)
                .ToListAsync();

            Entries = rights
                .Select(r => new RightEntry(
                    r.Id,
                    r.SubjectId,
                    map.TryGetValue(r.SubjectId, out var label) ? label : $"#{r.SubjectId}",
                    r.Right1.GetValueOrDefault(),
                    r.Right2.GetValueOrDefault(),
                    r.Right3.GetValueOrDefault(),
                    r.Right4.GetValueOrDefault(),
                    r.Right5.GetValueOrDefault()))
                .OrderBy(e => e.Label)
                .ToList();

            var assigned = Entries.Select(e => e.SubjectId).ToHashSet();
            AvailableSubjects = subjects.Where(s => !assigned.Contains(s.Id)).OrderBy(s => s.Label).ToList();
            SelectedSubjectId = null;
        }

        private static async Task<List<SelectOption>> ResolveSubjectsAsync(Aion.Infrastructure.AionDbContext db, SRightType type, int tenantId)
        {
            return type.DataSource switch
            {
                "SMenu" => await db.SMenu
                    .AsNoTracking()
                    .Where(m => m.TenantId == tenantId && m.Actif && !m.Deleted)
                    .OrderBy(m => m.Libelle)
                    .Select(m => new SelectOption(m.Id, m.Libelle))
                    .ToListAsync(),
                "SModule" => await db.SModule
                    .AsNoTracking()
                    .Where(m => m.TenantId == tenantId && m.Actif && !m.Deleted)
                    .OrderBy(m => m.Name)
                    .Select(m => new SelectOption(m.Id, m.Name))
                    .ToListAsync(),
                "STable" => await db.STable
                    .AsNoTracking()
                    .Where(t => t.TenantId == tenantId && t.Actif && !t.Deleted)
                    .OrderBy(t => t.Libelle)
                    .Select(t => new SelectOption(t.Id, t.Libelle))
                    .ToListAsync(),
                "SAction" => await db.SAction
                    .AsNoTracking()
                    .Where(a => a.TenantId == tenantId && a.Actif && !a.Deleted)
                    .OrderBy(a => a.Name)
                    .Select(a => new SelectOption(a.Id, a.Name))
                    .ToListAsync(),
                "SReport" => await db.SReport
                    .AsNoTracking()
                    .Where(r => r.TenantId == tenantId && r.Actif && !r.Deleted)
                    .OrderBy(r => r.Name)
                    .Select(r => new SelectOption(r.Id, r.Name))
                    .ToListAsync(),
                _ => new List<SelectOption>()
            };
        }
    }

