@using Microsoft.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components
@using Aion.Domain.Contracts
@using Aion.Domain.UI
@inject ITabService Tabs

<Tabs ActiveId="@_activeId" OnChange="OnTabChanged">
    @foreach (var tab in Tabs.Tabs)
    {
        <Tab Id="@tab.Id.ToString()">
            @tab.Title
            <button type="button" class="close" style="margin-left:0.5rem" @onclick="() => Close(tab)">x</button>
        </Tab>
    }
</Tabs>

@if (_active is not null)
{
    var componentType = RouteRegistry.Resolve(_active.Route);

    if (componentType is not null && typeof(IComponent).IsAssignableFrom(componentType))
    {
        <DynamicComponent Type="componentType"
                          Parameters="@(new Dictionary<string,object>(RouteRegistry.ToParameters(_active.Route, _active.Parameters)))" />
    }
    else
    {
        <FluentMessageBar Intent="MessageIntent.Error">
            Impossible de charger le module demand√©.
        </FluentMessageBar>
    }
}

@implements IDisposable

@code {
    private Guid? _activeId;
    private TabDescriptor? _active;

    protected override void OnInitialized()
    {
        Tabs.TabsChanged += OnTabsChanged;
        if (Tabs.Tabs.Count > 0)
        {
            _active = Tabs.Tabs[^1];
            _activeId = _active.Id;
            Tabs.Activate(_active.Id);
        }
    }

    void OnTabsChanged()
    {
        
        //if (_activeId is null || Tabs.Tabs.All(t => t.Id != _activeId))
        var activeTab = Tabs.Tabs.FirstOrDefault(t => t.Id == _activeId);

        if (activeTab is not null)
        {
            _active = activeTab;
            _activeId = activeTab.Id;
        }
        else if (_activeId is null || Tabs.Tabs.All(t => t.Id != _activeId))
        {
            if (Tabs.Tabs.Count > 0)
            {
                _active = Tabs.Tabs[^1];
                _activeId = _active.Id;
            }
            else
            {
                _active = null;
                _activeId = null;
            }
        }
        else if (_activeId is not null)
        {
            _active = Tabs.Tabs.FirstOrDefault(t => t.Id == _activeId);
        }

        InvokeAsync(StateHasChanged);
    }
   


    public void Dispose() => Tabs.TabsChanged -= OnTabsChanged;

    private Task OnTabChanged(Microsoft.FluentUI.AspNetCore.Components.TabChangeEventArgs e)
    {
        if (Guid.TryParse(e.ActiveId, out var id))
        {
            _active = Tabs.Tabs.FirstOrDefault(t => t.Id == id);
            _activeId = id;
            Tabs.Activate(id);
        }
        return Task.CompletedTask;
    }

    private async Task Close(TabDescriptor tab)
    {
        await Tabs.CloseAsync(tab.Id, CancellationToken.None);
        if (Tabs.Tabs.Count > 0)
        {
            _active = Tabs.Tabs[^1];
            _activeId = _active.Id;
            Tabs.Activate(_active.Id);
        }
        else
        {
            _active = null;
            _activeId = null;
        }
    }
}