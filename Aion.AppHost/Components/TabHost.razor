@using Microsoft.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components
@using Aion.Domain.Contracts
@using Aion.Domain.UI
@inject ITabService Tabs

<FluentTabs 
            ActiveTabId="@SelectedTabId"
            OnTabClose="@ClosedTab"
            OnTabChange="OnTabChange" Class="w-100" ShowClose="true" >
    @foreach (var tab in Tabs.Tabs)
    {
        <FluentTab Id="@GetTabHtmlId(tab.Id)"    
                   Label="@tab.Title"
                   Data="@tab" >
        </FluentTab>
    }
</FluentTabs>

@if (_active is not null)
{
    var componentType = RouteRegistry.Resolve(_active.Route);

    if (componentType is not null && typeof(IComponent).IsAssignableFrom(componentType))
    {
        <DynamicComponent Type="componentType"
                          Parameters="@(new Dictionary<string,object>(RouteRegistry.ToParameters(_active.Route, _active.Parameters)))" />
    }
    else
    {
        <FluentMessageBar Intent="MessageIntent.Error">
            Impossible de charger le module demand√©.
        </FluentMessageBar>
    }
}

@implements IDisposable

@code {
    
    private Guid? _activeId;
    private TabDescriptor? _active;
    string SelectedTabId = "";
    
    protected override void OnInitialized()
    {
        Tabs.TabsChanged += OnTabsChanged;
    
        if (Tabs.Tabs.Count > 0)
        {
            _active = Tabs.Tabs[^1];
            _activeId = _active.Id;
            Tabs.Activate(_active.Id);
        }
    }

    void OnTabsChanged()
    {
        
        var activeTab = Tabs.Tabs.FirstOrDefault(t => t.IsActive);
        if (activeTab is not null)
        {
            _active = activeTab;
            _activeId = activeTab.Id;
            SelectedTabId = GetActiveTabHtmlId() ?? "";
        }
        else if (_activeId is null || Tabs.Tabs.All(t => t.Id != _activeId))
        {
            if (Tabs.Tabs.Count > 0)
            {
                _active = Tabs.Tabs[^1];
                _activeId = _active.Id;
                SelectedTabId = GetActiveTabHtmlId() ?? "";
            }
            else
            {
                _active = null;
                _activeId = null;
                SelectedTabId = GetActiveTabHtmlId() ?? "";
            }
        }
        else if (_activeId is not null)
        {
            _active = Tabs.Tabs.FirstOrDefault(t => t.Id == _activeId);
            SelectedTabId = GetActiveTabHtmlId() ?? "";
        }

        InvokeAsync(StateHasChanged);
    }



    public void Dispose() => Tabs.TabsChanged -= OnTabsChanged;

    private static string GetTabHtmlId(Guid id) => $"tab-{id}";

    private string? GetActiveTabHtmlId() => _activeId is Guid id ? GetTabHtmlId(id) : null;

    private static bool TryParseTabHtmlId(string? value, out Guid id)
    {
        const string prefix = "tab-";

        if (!string.IsNullOrEmpty(value)
            && value.StartsWith(prefix, StringComparison.OrdinalIgnoreCase)
            && Guid.TryParse(value[prefix.Length..], out id))
        {
            return true;
        }

        id = Guid.Empty;
        return false;
    }
    
    private Task OnTabChange(FluentTab args)
    {

        if (TryParseTabHtmlId(args.Id, out var id))
        {
            _active = Tabs.Tabs.FirstOrDefault(t => t.Id == id);
            _activeId = id;
            Tabs.Activate(id);
        }
        return Task.CompletedTask;
    }
    
    private async Task ClosedTab(FluentTab args)
    {
        if (TryParseTabHtmlId(args.Id, out var id))
        {
            await Tabs.CloseAsync(id, CancellationToken.None);
            if (Tabs.Tabs.Count > 0)
            {
                _active = Tabs.Tabs[^1];
                _activeId = _active.Id;
                Tabs.Activate(_active.Id);
            }
            else
            {
                _active = null;
                _activeId = null;
            }
        }
    }

  
}
