@page
@model Aion.AppHost.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Connexion - Aion ERP</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600&display=swap" rel="stylesheet">
    <link href="_content/Microsoft.FluentUI.AspNetCore.Components/css/reboot.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Orbitron', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: radial-gradient(circle at top left, rgba(212, 175, 55, 0.15), transparent 40%),
                        radial-gradient(circle at bottom right, rgba(212, 175, 55, 0.1), transparent 35%),
                        #050505;
            color: #f7f3e3;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            position: relative;
            overflow: hidden;
        }

        body::before,
        body::after {
            content: '';
            position: absolute;
            width: 280px;
            height: 280px;
            border: 1px solid rgba(212, 175, 55, 0.4);
            border-radius: 50%;
            filter: blur(1px);
            z-index: 0;
        }

        body::before {
            top: -120px;
            right: -80px;
        }

        body::after {
            bottom: -140px;
            left: -100px;
        }

        .login-card {
            background: linear-gradient(145deg, rgba(10, 10, 10, 0.85), rgba(10, 10, 10, 0.6));
            padding: 2.75rem 2.5rem;
            border-radius: 20px;
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.6);
            width: 100%;
            max-width: 460px;
            border: 1px solid rgba(212, 175, 55, 0.3);
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(12px);
        }

        .login-card::before {
            content: '';
            position: absolute;
            inset: 1px;
            border-radius: 18px;
            border: 1px solid rgba(212, 175, 55, 0.12);
            pointer-events: none;
        }

        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
            position: relative;
            z-index: 1;
        }

            .login-header h1 {
                font-size: 2.2rem;
                font-weight: 600;
                margin-bottom: 0.75rem;
                letter-spacing: 0.1em;
                color: #f5cf75;
                text-transform: uppercase;
            }

            .login-header p {
                color: rgba(247, 243, 227, 0.75);
                font-size: 1rem;
                letter-spacing: 0.08em;
            }

        .form-group {
            margin-bottom: 1.75rem;
            position: relative;
            z-index: 1;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.6rem;
                color: rgba(247, 243, 227, 0.85);
                font-weight: 500;
                letter-spacing: 0.06em;
                text-transform: uppercase;
                font-size: 0.8rem;
            }

            .form-group input {
                width: 100%;
                padding: 0.85rem 1.1rem;
                border: 1px solid rgba(212, 175, 55, 0.25);
                border-radius: 10px;
                font-size: 1rem;
                background: rgba(8, 8, 8, 0.6);
                color: #f7f3e3;
                transition: border-color 0.3s ease, box-shadow 0.3s ease;
                letter-spacing: 0.03em;
            }

                .form-group input::placeholder {
                    color: rgba(247, 243, 227, 0.35);
                }

                .form-group input:focus {
                    outline: none;
                    border-color: rgba(212, 175, 55, 0.8);
                    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.25);
                    background: rgba(8, 8, 8, 0.8);
                }

                .form-group input:disabled {
                    background-color: rgba(40, 40, 40, 0.6);
                    cursor: not-allowed;
                }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            margin-bottom: 1.75rem;
            position: relative;
            z-index: 1;
            color: rgba(247, 243, 227, 0.75);
            font-size: 0.9rem;
            letter-spacing: 0.04em;
        }

            .checkbox-group input[type="checkbox"] {
                width: auto;
                accent-color: #f5cf75;
            }

        .btn-login {
            width: 100%;
            padding: 0.9rem 1.1rem;
            background: linear-gradient(135deg, #f5cf75, #b8922f);
            color: #060606;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            box-shadow: 0 15px 30px rgba(181, 137, 47, 0.35);
        }

            .btn-login:hover {
                transform: translateY(-2px) scale(1.01);
                box-shadow: 0 20px 40px rgba(181, 137, 47, 0.45);
            }

            .btn-login:disabled {
                background: linear-gradient(135deg, rgba(245, 207, 117, 0.6), rgba(184, 146, 47, 0.6));
                cursor: not-allowed;
                box-shadow: none;
                opacity: 0.7;
            }

        .alert {
            padding: 1rem 1.25rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
            letter-spacing: 0.04em;
        }

        .alert-error {
            background-color: rgba(193, 54, 54, 0.18);
            color: #ff8d8d;
            border: 1px solid rgba(255, 141, 141, 0.45);
        }

        .alert-success {
            background-color: rgba(75, 181, 67, 0.18);
            color: #c5f2c0;
            border: 1px solid rgba(173, 255, 163, 0.35);
        }

        .alert-warning {
            background-color: rgba(255, 196, 88, 0.15);
            color: #ffd27f;
            border: 1px solid rgba(255, 196, 88, 0.35);
        }

        .login-footer {
            margin-top: 2.5rem;
            padding-top: 1.75rem;
            border-top: 1px solid rgba(212, 175, 55, 0.25);
            text-align: center;
            font-size: 0.85rem;
            color: rgba(247, 243, 227, 0.65);
            letter-spacing: 0.06em;
            position: relative;
            z-index: 1;
        }

            .login-footer strong {
                color: #f5cf75;
                font-weight: 600;
            }

            .login-footer .warning {
                color: #ff8d8d;
                font-weight: 600;
            }

        @media (max-width: 520px) {
            body {
                padding: 1rem;
            }

            .login-card {
                padding: 2.25rem 1.75rem;
            }

            .login-header h1 {
                font-size: 1.8rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-header">
            <h1>🔐 Aion ERP</h1>
            <p>Connectez-vous à votre compte</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">
                @Model.SuccessMessage
            </div>
        }

        <form method="post" asp-antiforgery="true">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Input.Username">Nom d'utilisateur</label>
                <input asp-for="Input.Username"
                       type="text"
                       placeholder="Nom d'utilisateur" required
                       autofocus />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Mot de passe</label>
                <input asp-for="Input.Password"
                       type="password"
                       placeholder="••••••••"
                       required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            @if (Model.RequirePasswordChange ||
                        !string.IsNullOrWhiteSpace(Model.Input.NewPassword))
            {
                <div class="alert alert-warning" style="margin-bottom: 1rem;">
                    🔄 Votre mot de passe doit être mis à jour avant d'accéder à l'application.<br />
                    👉 Saisissez votre mot de passe actuel dans le champ «&nbsp;Mot de passe&nbsp;»
                    (par défaut : <strong>admin</strong>),
                    puis choisissez un nouveau mot de passe ci-dessous.
                </div>

                <div class="form-group">
                    <label asp-for="Input.NewPassword">Nouveau mot de passe</label>
                    <input asp-for="Input.NewPassword"
                           type="password"
                           placeholder="••••••••"
                           required />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirmez le mot de passe</label>
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           placeholder="••••••••"
                           required />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <label asp-for="Input.TenantId">Tenant ID</label>
                <input asp-for="Input.TenantId"
                       type="number"
                       placeholder="1"
                       value="@Model.Input.TenantId" required />
                <span asp-validation-for="Input.TenantId" class="text-danger"></span>
            </div>

            <div class="checkbox-group">
                <input asp-for="Input.RememberMe" type="checkbox" />
                <label asp-for="Input.RememberMe">Se souvenir de moi</label>
            </div>

            <button type="submit" class="btn-login">
                Se connecter
            </button>
        </form>

        <div class="login-footer">
            <strong>Compte par défaut :</strong> admin / admin (Tenant: 1)<br />
            <span class="warning">⚠️ Changez ce mot de passe en production !</span>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
