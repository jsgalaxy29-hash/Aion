@page
@model Aion.AppHost.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Connexion - Aion ERP</title>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="_content/Microsoft.FluentUI.AspNetCore.Components/css/reboot.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Manrope', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: radial-gradient(circle at 20% 20%, rgba(148, 163, 184, 0.18), transparent 55%),
                        radial-gradient(circle at 85% 20%, rgba(59, 130, 246, 0.25), transparent 50%),
                        linear-gradient(160deg, #0b1220, #111827 55%, #0f172a 100%);
            color: #e2e8f0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: clamp(1.25rem, 3vw, 3rem);
            position: relative;
            overflow: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            inset: -30% 20% auto;
            height: 55vh;
            background: radial-gradient(circle at center, rgba(56, 189, 248, 0.35), rgba(56, 189, 248, 0));
            filter: blur(110px);
            opacity: 0.55;
            z-index: 0;
            animation: floatGlow 14s ease-in-out infinite;
        }

        body::after {
            content: '';
            position: absolute;
            inset: auto 10% -30% 10%;
            height: 45vh;
            background: radial-gradient(circle at center, rgba(248, 250, 252, 0.24), rgba(248, 250, 252, 0));
            filter: blur(120px);
            opacity: 0.35;
            z-index: 0;
        }

        keyframes floatGlow {
            0%,
            100% {
                transform: translate3d(-6%, -6%, 0) scale(1);
            }

            50% {
                transform: translate3d(4%, 4%, 0) scale(1.08);
            }
        }

        .login-card {
            background: linear-gradient(145deg, rgba(15, 23, 42, 0.92), rgba(30, 41, 59, 0.82));
            border: 1px solid rgba(148, 163, 184, 0.28);
            box-shadow: 0 32px 80px rgba(15, 23, 42, 0.55);
            border-radius: 26px;
            padding: clamp(2.25rem, 4vw, 3.1rem);
            width: min(92vw, 520px);
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(14px) saturate(150%);
            z-index: 1;
        }

        .login-card::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 26px;
            background: linear-gradient(135deg, rgba(96, 165, 250, 0.18), rgba(59, 130, 246, 0) 45%, rgba(148, 163, 184, 0.12));
            opacity: 0.7;
            pointer-events: none;
        }

        .login-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1.35rem;
            text-align: center;
            margin-bottom: 2.75rem;
            position: relative;
            z-index: 1;
        }

        .brand-mark {
            display: inline-flex;
            align-items: center;
            gap: 0.9rem;
            padding: 0.85rem 1.45rem;
            border-radius: 999px;
            background: rgba(15, 23, 42, 0.65);
            border: 1px solid rgba(148, 163, 184, 0.25);
            box-shadow: 0 18px 36px rgba(15, 23, 42, 0.45);
        }

        .brand-mark img {
            width: 56px;
            height: 56px;
        }

        .brand-copy {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .brand-copy span {
            font-size: 0.75rem;
            letter-spacing: 0.24em;
            text-transform: uppercase;
            color: rgba(226, 232, 240, 0.7);
        }

        .brand-copy strong {
            font-size: 1.35rem;
            letter-spacing: 0.08em;
            font-weight: 600;
            color: #f8fafc;
        }

        .login-header p {
            color: rgba(226, 232, 240, 0.78);
            font-size: 1.05rem;
            letter-spacing: 0.04em;
            max-width: 30ch;
        }

        .form-group {
            margin-bottom: 1.85rem;
            position: relative;
            z-index: 1;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.6rem;
            color: rgba(226, 232, 240, 0.8);
            font-weight: 600;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            font-size: 0.78rem;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .form-group input {
            width: 100%;
            padding: 1rem 1.1rem;
            border-radius: 14px;
            font-size: 1rem;
            background: rgba(15, 23, 42, 0.75);
            border: 1px solid rgba(148, 163, 184, 0.28);
            color: #f8fafc;
            transition: border 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
            letter-spacing: 0.02em;
            box-shadow: inset 0 1px 0 rgba(148, 163, 184, 0.18);
        }

        .form-group input::placeholder {
            color: rgba(148, 163, 184, 0.5);
            letter-spacing: 0.04em;
        }

        .form-group input:focus {
            outline: none;
            border: 1px solid rgba(96, 165, 250, 0.7);
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.25);
            transform: translateY(-1px);
        }

        .form-group input:disabled {
            background: rgba(30, 41, 59, 0.65);
            border-color: rgba(100, 116, 139, 0.25);
            cursor: not-allowed;
            box-shadow: none;
            color: rgba(148, 163, 184, 0.65);
        }

        .form-group:focus-within label {
            color: rgba(148, 197, 255, 0.95);
            transform: translateY(-2px);
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            margin-bottom: 1.75rem;
            position: relative;
            z-index: 1;
            color: rgba(226, 232, 240, 0.75);
            font-size: 0.9rem;
            letter-spacing: 0.03em;
        }

        .checkbox-group input[type="checkbox"] {
            width: auto;
            accent-color: #60a5fa;
            width: 1.05rem;
            height: 1.05rem;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            border-radius: 6px;
        }

        .btn-login {
            width: 100%;
            padding: 1.05rem 1.2rem;
            background: linear-gradient(110deg, #38bdf8, #60a5fa 55%, #2563eb 100%);
            color: #0b1120;
            border: none;
            border-radius: 16px;
            font-size: 1.05rem;
            font-weight: 700;
            cursor: pointer;
            transition: transform 0.28s ease, box-shadow 0.28s ease, filter 0.28s ease;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            box-shadow: 0 18px 40px rgba(37, 99, 235, 0.45);
            position: relative;
            overflow: hidden;
        }

        .btn-login::after {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.55), transparent 55%);
            mix-blend-mode: screen;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 24px 50px rgba(37, 99, 235, 0.55);
        }

        .btn-login:hover::after {
            opacity: 1;
        }

        .btn-login:focus-visible {
            outline: none;
            box-shadow: 0 0 0 4px rgba(96, 165, 250, 0.45);
        }

        .btn-login:disabled {
            background: linear-gradient(110deg, rgba(96, 165, 250, 0.55), rgba(37, 99, 235, 0.5));
            cursor: not-allowed;
            box-shadow: none;
            opacity: 0.7;
        }

        .alert {
            padding: 1rem 1.25rem;
            border-radius: 14px;
            margin-bottom: 1.4rem;
            font-size: 0.95rem;
            letter-spacing: 0.03em;
            border: 1px solid transparent;
            background: rgba(15, 23, 42, 0.75);
        }

        .alert-error {
            border-color: rgba(248, 113, 113, 0.45);
            color: #fecaca;
            box-shadow: 0 8px 24px rgba(248, 113, 113, 0.28);
        }

        .alert-success {
            border-color: rgba(134, 239, 172, 0.45);
            color: #bbf7d0;
            box-shadow: 0 8px 24px rgba(74, 222, 128, 0.24);
        }

        .alert-warning {
            border-color: rgba(253, 224, 71, 0.45);
            color: #fef08a;
            box-shadow: 0 8px 24px rgba(253, 224, 71, 0.22);
        }

        .login-footer {
            margin-top: 2.3rem;
            padding-top: 1.7rem;
            border-top: 1px solid rgba(148, 163, 184, 0.25);
            text-align: center;
            font-size: 0.88rem;
            color: rgba(226, 232, 240, 0.7);
            letter-spacing: 0.05em;
            position: relative;
            z-index: 1;
        }

        .login-footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 70%;
            height: 2px;
            background: linear-gradient(90deg, rgba(59, 130, 246, 0), rgba(96, 165, 250, 0.65), rgba(59, 130, 246, 0));
            filter: blur(0.6px);
        }

        .login-footer strong {
            color: #93c5fd;
            font-weight: 700;
            letter-spacing: 0.12em;
        }

        .login-footer .warning {
            color: #fca5a5;
            font-weight: 700;
            letter-spacing: 0.1em;
        }

        media (max-width: 520px) {
            body {
                padding: 1.4rem;
            }

            .login-card {
                padding: 2.4rem 1.95rem;
                border-radius: 22px;
            }

            .brand-mark {
                padding: 0.75rem 1.1rem;
            }

            .brand-mark img {
                width: 48px;
                height: 48px;
            }

            .brand-copy strong {
                font-size: 1.2rem;
            }

            .checkbox-group {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.45rem;
            }

            .btn-login {
                font-size: 0.98rem;
                padding: 0.95rem 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-header">
            <div class="brand-mark">
                <img src="~/images/aion-logo.svg" alt="Logo Aion" />
                <div class="brand-copy">
                    <span>Bienvenue sur</span>
                    <strong>Aion ERP</strong>
                </div>
            </div>
            <p>Connectez-vous à votre espace de travail et poursuivez vos projets en toute sérénité.</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">
                @Model.SuccessMessage
            </div>
        }

        <form method="post" asp-antiforgery="true">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Input.Username">Nom d'utilisateur</label>
                <input asp-for="Input.Username"
                       type="text"
                       placeholder="Nom d'utilisateur" required
                       autofocus />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Mot de passe</label>
                <input asp-for="Input.Password"
                       type="password"
                       placeholder="••••••••"
                       required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            @if (Model.RequirePasswordChange ||
                        !string.IsNullOrWhiteSpace(Model.Input.NewPassword))
            {
                <div class="alert alert-warning" style="margin-bottom: 1rem;">
                    🔄 Votre mot de passe doit être mis à jour avant d'accéder à l'application.<br />
                    👉 Saisissez votre mot de passe actuel dans le champ «&nbsp;Mot de passe&nbsp;»
                    (par défaut : <strong>admin</strong>),
                    puis choisissez un nouveau mot de passe ci-dessous.
                </div>

                <div class="form-group">
                    <label asp-for="Input.NewPassword">Nouveau mot de passe</label>
                    <input asp-for="Input.NewPassword"
                           type="password"
                           placeholder="••••••••"
                           required />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirmez le mot de passe</label>
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           placeholder="••••••••"
                           required />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <label asp-for="Input.TenantId">Tenant ID</label>
                <input asp-for="Input.TenantId"
                       type="number"
                       placeholder="1"
                       required />
                <span asp-validation-for="Input.TenantId" class="text-danger"></span>
            </div>

            <div class="checkbox-group">
                <input asp-for="Input.RememberMe" type="checkbox" />
                <label asp-for="Input.RememberMe">Se souvenir de moi</label>
            </div>

            <button type="submit" class="btn-login">
                Se connecter
            </button>
        </form>

        <div class="login-footer">
            <strong>Compte par défaut :</strong> admin / admin (Tenant: 1)<br />
            <span class="warning">⚠️ Changez ce mot de passe en production !</span>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
