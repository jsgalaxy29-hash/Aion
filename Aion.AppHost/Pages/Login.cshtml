@page
@model Aion.AppHost.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Connexion - Aion ERP</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600&display=swap" rel="stylesheet">
    <link href="_content/Microsoft.FluentUI.AspNetCore.Components/css/reboot.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Orbitron', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #050505;
            background-image:
                radial-gradient(circle at top left, rgba(212, 175, 55, 0.18), transparent 42%),
                radial-gradient(circle at bottom right, rgba(212, 175, 55, 0.12), transparent 38%),
                linear-gradient(140deg, rgba(212, 175, 55, 0.08) 0%, rgba(0, 0, 0, 0) 40%),
                repeating-linear-gradient(135deg, rgba(212, 175, 55, 0.04) 0, rgba(212, 175, 55, 0.04) 1px, transparent 1px, transparent 26px),
                #050505;
            color: #f7f3e3;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: clamp(1.25rem, 2vw, 2.75rem);
            position: relative;
            overflow: hidden;
        }

        body::before,
        body::after {
            content: '';
            position: absolute;
            inset: -20vh;
            background: radial-gradient(circle at center, rgba(212, 175, 55, 0.12), transparent 55%);
            mix-blend-mode: screen;
            opacity: 0.55;
            filter: blur(120px);
            z-index: 0;
        }

        body::after {
            inset: auto -40vw -40vh auto;
            width: 70vw;
            height: 70vh;
            background: conic-gradient(from 120deg, rgba(212, 175, 55, 0.35), rgba(212, 175, 55, 0));
            filter: blur(140px);
            opacity: 0.45;
            animation: aurora 22s linear infinite;
        }

        @keyframes aurora {
            0% {
                transform: rotate(0deg);
            }

            50% {
                transform: rotate(180deg) scale(1.05);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .login-card {
            background:
                linear-gradient(155deg, rgba(12, 12, 12, 0.88), rgba(8, 8, 8, 0.65)) padding-box,
                linear-gradient(155deg, rgba(212, 175, 55, 0.38), rgba(57, 43, 8, 0.2)) border-box;
            padding: 3rem 2.75rem;
            border-radius: 22px;
            box-shadow: 0 40px 90px rgba(0, 0, 0, 0.65), 0 0 80px rgba(212, 175, 55, 0.08);
            width: 100%;
            max-width: 480px;
            border: 1px solid transparent;
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(14px) saturate(135%);
            z-index: 1;
        }

        .login-card::before {
            content: '';
            position: absolute;
            inset: 1px;
            border-radius: 20px;
            border: 1px solid rgba(212, 175, 55, 0.16);
            background: linear-gradient(160deg, rgba(212, 175, 55, 0.18), rgba(18, 18, 18, 0.2) 50%, rgba(212, 175, 55, 0.05));
            opacity: 0.45;
            pointer-events: none;
        }

        .login-card::after {
            content: '';
            position: absolute;
            top: -40%;
            right: -35%;
            width: 65%;
            height: 65%;
            background: radial-gradient(circle at center, rgba(255, 227, 137, 0.45), rgba(255, 227, 137, 0));
            filter: blur(40px);
            opacity: 0.55;
            pointer-events: none;
        }

        .login-header {
            text-align: center;
            margin-bottom: 2.75rem;
            position: relative;
            z-index: 1;
        }

            .login-header h1 {
                font-size: 2.35rem;
                font-weight: 600;
                margin-bottom: 0.85rem;
                letter-spacing: 0.12em;
                text-transform: uppercase;
                background: linear-gradient(92deg, #fff2b7 0%, #f5cf75 45%, #b88f2f 100%);
                -webkit-background-clip: text;
                color: transparent;
                text-shadow: 0 0 22px rgba(245, 207, 117, 0.45);
            }

            .login-header p {
                color: rgba(247, 243, 227, 0.78);
                font-size: 1rem;
                letter-spacing: 0.09em;
                text-transform: uppercase;
                text-shadow: 0 0 18px rgba(212, 175, 55, 0.15);
            }

        .form-group {
            margin-bottom: 1.85rem;
            position: relative;
            z-index: 1;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.65rem;
                color: rgba(247, 243, 227, 0.88);
                font-weight: 500;
                letter-spacing: 0.07em;
                text-transform: uppercase;
                font-size: 0.78rem;
                transition: color 0.3s ease, text-shadow 0.3s ease;
            }

            .form-group input {
                width: 100%;
                padding: 0.95rem 1.15rem;
                border-radius: 12px;
                font-size: 1rem;
                background:
                    linear-gradient(160deg, rgba(14, 14, 14, 0.92), rgba(10, 10, 10, 0.65)) padding-box,
                    linear-gradient(160deg, rgba(212, 175, 55, 0.35), rgba(48, 36, 6, 0.2)) border-box;
                border: 1px solid transparent;
                color: #f7f3e3;
                transition: border 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
                letter-spacing: 0.03em;
                box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05), 0 20px 40px rgba(0, 0, 0, 0.45);
            }

                .form-group input::placeholder {
                    color: rgba(247, 243, 227, 0.3);
                    text-transform: uppercase;
                    letter-spacing: 0.05em;
                }

                .form-group input:focus {
                    outline: none;
                    border: 1px solid rgba(245, 207, 117, 0.85);
                    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.08), 0 0 0 4px rgba(212, 175, 55, 0.22);
                    background:
                        linear-gradient(160deg, rgba(18, 18, 18, 0.95), rgba(10, 10, 10, 0.75)) padding-box,
                        linear-gradient(160deg, rgba(245, 207, 117, 0.65), rgba(184, 146, 47, 0.4)) border-box;
                }

                .form-group input:disabled {
                    background: rgba(26, 26, 26, 0.75);
                    border-color: rgba(90, 70, 24, 0.25);
                    cursor: not-allowed;
                    box-shadow: none;
                    color: rgba(247, 243, 227, 0.55);
                }

            .form-group:focus-within label {
                color: #f5cf75;
                text-shadow: 0 0 18px rgba(245, 207, 117, 0.35);
            }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 0.65rem;
            margin-bottom: 1.85rem;
            position: relative;
            z-index: 1;
            color: rgba(247, 243, 227, 0.78);
            font-size: 0.88rem;
            letter-spacing: 0.05em;
        }

            .checkbox-group input[type="checkbox"] {
                width: auto;
                accent-color: #f5cf75;
                box-shadow: 0 0 12px rgba(245, 207, 117, 0.2);
            }

        .btn-login {
            width: 100%;
            padding: 1rem 1.2rem;
            background: linear-gradient(120deg, #ffe7a8, #f5cf75 45%, #b98c2f 100%);
            color: #060606;
            border: none;
            border-radius: 14px;
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            letter-spacing: 0.09em;
            text-transform: uppercase;
            box-shadow: 0 22px 45px rgba(181, 137, 47, 0.42);
            position: relative;
            overflow: hidden;
            isolation: isolate;
        }

            .btn-login::after {
                content: '';
                position: absolute;
                top: 0;
                left: -120%;
                width: 120%;
                height: 100%;
                background: linear-gradient(100deg, transparent 0%, rgba(255, 255, 255, 0.35) 50%, transparent 100%);
                transform: skewX(-18deg);
                transition: transform 0.45s ease;
                mix-blend-mode: screen;
            }

            .btn-login:hover {
                transform: translateY(-3px) scale(1.015);
                box-shadow: 0 30px 55px rgba(181, 137, 47, 0.55);
            }

            .btn-login:hover::after {
                transform: translateX(210%) skewX(-18deg);
            }

            .btn-login:focus-visible {
                outline: none;
                box-shadow: 0 0 0 4px rgba(245, 207, 117, 0.35);
            }

            .btn-login:disabled {
                background: linear-gradient(120deg, rgba(245, 207, 117, 0.58), rgba(184, 146, 47, 0.54));
                cursor: not-allowed;
                box-shadow: none;
                opacity: 0.65;
            }

        .alert {
            padding: 1rem 1.25rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
            letter-spacing: 0.04em;
        }

        .alert-error {
            background-color: rgba(193, 54, 54, 0.18);
            color: #ff8d8d;
            border: 1px solid rgba(255, 141, 141, 0.45);
        }

        .alert-success {
            background-color: rgba(75, 181, 67, 0.18);
            color: #c5f2c0;
            border: 1px solid rgba(173, 255, 163, 0.35);
        }

        .alert-warning {
            background-color: rgba(255, 196, 88, 0.15);
            color: #ffd27f;
            border: 1px solid rgba(255, 196, 88, 0.35);
        }

        .login-footer {
            margin-top: 2.5rem;
            padding-top: 1.75rem;
            border-top: 1px solid rgba(212, 175, 55, 0.28);
            text-align: center;
            font-size: 0.86rem;
            color: rgba(247, 243, 227, 0.7);
            letter-spacing: 0.08em;
            position: relative;
            z-index: 1;
        }

            .login-footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 72%;
                height: 2px;
                background: linear-gradient(90deg, rgba(212, 175, 55, 0), rgba(245, 207, 117, 0.6), rgba(212, 175, 55, 0));
                filter: blur(0.5px);
            }

            .login-footer strong {
                color: #f5cf75;
                font-weight: 600;
                letter-spacing: 0.12em;
            }

            .login-footer .warning {
                color: #ff8d8d;
                font-weight: 600;
                letter-spacing: 0.1em;
            }

        @media (max-width: 520px) {
            body {
                padding: 1.2rem;
            }

            .login-card {
                padding: 2.35rem 1.85rem;
            }

            .login-header h1 {
                font-size: 1.9rem;
            }

            .checkbox-group {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.45rem;
                font-size: 0.85rem;
            }

            .btn-login {
                font-size: 0.95rem;
                padding: 0.9rem 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-header">
            <h1>🔐 Aion ERP</h1>
            <p>Connectez-vous à votre compte</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">
                @Model.SuccessMessage
            </div>
        }

        <form method="post" asp-antiforgery="true">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Input.Username">Nom d'utilisateur</label>
                <input asp-for="Input.Username"
                       type="text"
                       placeholder="Nom d'utilisateur" required
                       autofocus />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Mot de passe</label>
                <input asp-for="Input.Password"
                       type="password"
                       placeholder="••••••••"
                       required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            @if (Model.RequirePasswordChange ||
                        !string.IsNullOrWhiteSpace(Model.Input.NewPassword))
            {
                <div class="alert alert-warning" style="margin-bottom: 1rem;">
                    🔄 Votre mot de passe doit être mis à jour avant d'accéder à l'application.<br />
                    👉 Saisissez votre mot de passe actuel dans le champ «&nbsp;Mot de passe&nbsp;»
                    (par défaut : <strong>admin</strong>),
                    puis choisissez un nouveau mot de passe ci-dessous.
                </div>

                <div class="form-group">
                    <label asp-for="Input.NewPassword">Nouveau mot de passe</label>
                    <input asp-for="Input.NewPassword"
                           type="password"
                           placeholder="••••••••"
                           required />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirmez le mot de passe</label>
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           placeholder="••••••••"
                           required />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <label asp-for="Input.TenantId">Tenant ID</label>
                <input asp-for="Input.TenantId"
                       type="number"
                       placeholder="1"
                       value="@Model.Input.TenantId" required />
                <span asp-validation-for="Input.TenantId" class="text-danger"></span>
            </div>

            <div class="checkbox-group">
                <input asp-for="Input.RememberMe" type="checkbox" />
                <label asp-for="Input.RememberMe">Se souvenir de moi</label>
            </div>

            <button type="submit" class="btn-login">
                Se connecter
            </button>
        </form>

        <div class="login-footer">
            <strong>Compte par défaut :</strong> admin / admin (Tenant: 1)<br />
            <span class="warning">⚠️ Changez ce mot de passe en production !</span>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
